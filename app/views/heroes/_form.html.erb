<%= form_with(model: hero, class: "contents") do |form| %>
  <% if hero.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(hero.errors.count, "error") %> prohibited this hero from being saved:</h2>

      <ul class="list-disc ml-6">
        <% hero.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: {"border-red-400 focus:border-red-500": hero.errors[:name].any?} %>
  </div>

  <div class="my-5">
    <%= form.label :pronouns %>
    <%= form.collection_radio_buttons :pronouns, Hero.pronouns, :first, :first %>
  </div>

  <div class="my-5">
    <%= form.label :role %>
    <%= form.select :role, Hero.roles.map{|r| [r[0].gsub("_", " ").titleize, r[1]]},
    { prompt: "Choose Role" } %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
