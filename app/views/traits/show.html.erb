<% content_for :title, @trait.name %>

<main class="w-full max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-4">
      <%= link_to traits_path, class: "text-gray-500 hover:text-gray-700 text-sm font-medium flex items-center gap-1" do %>
        â† Back to Traits
      <% end %>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-8">
      <div class="flex items-center gap-3 mb-4">
        <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-md uppercase tracking-wide">
          <%= @trait.type %>
        </span>
      </div>

      <h1 class="text-3xl font-bold mb-2"><%= @trait.name %></h1>
      <p class="text-lg text-gray-500 mb-6"><%= @trait.slug %></p>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-3">
        <%= link_to "Edit", edit_trait_path(@trait), class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md font-medium transition-colors" %>
        <%= button_to "Delete", @trait, method: :delete, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-md font-medium cursor-pointer transition-colors", data: { turbo_confirm: "Are you sure you want to delete #{@trait.name}?" } %>
      </div>
    </div>
  </div>

  <!-- Abilities Section -->
  <% if @trait.abilities.present? && @trait.abilities.any? %>
    <div class="bg-white rounded-lg border border-gray-200 p-8 mb-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Abilities</h2>

      <div class="space-y-4">
        <% @trait.abilities.each do |name, description| %>
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-100">
            <h3 class="font-semibold text-lg text-gray-900 mb-2"><%= name %></h3>
            <p class="text-gray-700 leading-relaxed"><%= description %></p>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-gray-200 p-8 text-center mb-8">
      <p class="text-gray-500">This trait has no abilities defined.</p>
    </div>
  <% end %>

  <!-- Heroes using this trait -->
  <% heroes_with_trait = Hero.joins(:traits).where(traits: { id: @trait.id }) %>
  <% if heroes_with_trait.any? %>
    <div class="bg-white rounded-lg border border-gray-200 p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Heroes with this trait</h2>

      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
        <% heroes_with_trait.each do |hero| %>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-medium text-gray-900"><%= hero.name %></h3>
                <p class="text-sm text-gray-600"><%= hero.pronouns %> â€¢ <%= hero.role.humanize %></p>
              </div>
              <%= link_to "View", hero, class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg border border-gray-200 p-8 text-center">
      <p class="text-gray-500">No heroes currently have this trait.</p>
    </div>
  <% end %>
</main>
