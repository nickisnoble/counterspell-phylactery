<p class="notice"><%= notice %></p>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold mb-4"><%= @descriptor.name %></h1>
  
  <div class="bg-gray-50 p-6 rounded-lg mb-6">
    <h2 class="text-lg font-semibold text-gray-700 mb-2">Description</h2>
    <p class="text-gray-800"><%= @descriptor.description %></p>
  </div>

  <div class="flex space-x-4">
    <%= link_to "Edit", url_for(action: :edit, id: @descriptor), class: "btn btn-primary" %>
    <%= link_to "Back", url_for(action: :index), class: "btn btn-secondary" %>
    <%= link_to "Delete", @descriptor, method: :delete,
                confirm: "Are you sure?",
                class: "btn btn-danger" %>
  </div>
</div>