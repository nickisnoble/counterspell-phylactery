<%= form_with(model: @descriptor, url: @descriptor.persisted? ? url_for(action: :update, id: @descriptor) : url_for(action: :create), local: true, method: @descriptor.persisted? ? :patch : :post) do |form| %>
  <% if @descriptor.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
      <h2 class="text-red-800 font-semibold"><%= pluralize(@descriptor.errors.count, "error") %> prohibited this <%= @descriptor_type.name.demodulize.downcase %> from being saved:</h2>
      <ul class="mt-2 text-red-700">
        <% @descriptor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div class="form-group">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :description, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", url_for(action: :index), class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>