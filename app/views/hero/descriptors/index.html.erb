<p class="notice"><%= notice %></p>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold"><%= @descriptor_type.name.demodulize.pluralize %></h1>
  <%= link_to "New #{@descriptor_type.name.demodulize}", url_for(action: :new), class: "btn btn-primary" %>
</div>

<div id="<%= @descriptor_type.name.demodulize.underscore.pluralize %>" class="space-y-4">
  <% @descriptors.each do |descriptor| %>
    <div class="p-4 border border-gray-200 rounded-lg">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="text-lg font-semibold"><%= descriptor.name %></h3>
          <p class="text-gray-600"><%= descriptor.description %></p>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Show", descriptor, class: "text-blue-600 hover:text-blue-800" %>
          <%= link_to "Edit", url_for(action: :edit, id: descriptor), class: "text-green-600 hover:text-green-800" %>
          <%= link_to "Delete", descriptor, method: :delete,
                      confirm: "Are you sure?",
                      class: "text-red-600 hover:text-red-800" %>
        </div>
      </div>
    </div>
  <% end %>
</div>